<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background_dialog"
    android:layout_margin="@dimen/_20sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_titleDialog"
            android:gravity="center"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="10"
            android:text="DO YOU WANT TO DOWNLOAD THIS APP?"
            android:textColor="@color/blue"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_yes"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_blue"
                android:gravity="center_vertical|center_horizontal"
                android:text="YES"
                android:fontFamily="@font/avant_garde_bold"
                android:textColor="#ffffffff" />
            <Button
                android:id="@+id/bt_no"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@id/bt_yes"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_white"
                android:gravity="center_vertical|center_horizontal"
                android:text="NO"
                android:fontFamily="@font/avant_garde_bold"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>